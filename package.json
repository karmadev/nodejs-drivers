{
  "repository": "git@github.com:karmadev/nodejs-drivers.git",
  "author": "Marcus Nielsen <marcus@karma.life>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^23.3.5",
    "jest": "^23.6.0",
    "lerna": "^3.3.0",
    "prettier": "^1.14.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "build": "lerna run build",
    "test": "lerna run test"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --config ./.prettierrc --write",
      "git add"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
